{
    "$schema": "https://ui.shadcn.com/schema.json",
    "style": "new-york",
    "rsc": true,
    "tsx": true,
    "tailwind": {
        "config": "",
        "css": "app/globals.css",
        "baseColor": "zinc",
        "cssVariables": true,
        "prefix": ""
    },
    "iconLibrary": "lucide",
    "aliases": {
        "components": "@/components",
        "utils": "@/lib/utils",
        "ui": "@/components/ui",
        "lib": "@/lib",
        "hooks": "@/hooks"
    },
    "registries": {
        "@shadcnstore": {
            "url": "https://shadcnstore.com/r/{name}.json"
        },
        "@shadcnstore-pro": {
            "url": "https://shadcnstore.com/r/{name}.json?token=${SHADCNSTORE_TOKEN}",
            "headers": {
                "Authorization": "Bearer ${SHADCNSTORE_TOKEN}"
            }
        }
    }
}
